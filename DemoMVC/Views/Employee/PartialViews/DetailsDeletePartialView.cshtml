@model EmployeeViewModel 


<div class="w-75 m-auto row">
    <div class="col-md-6">
        @if(Model.ImageName is not null)
        {
            <div class="w-100">
                <img src="~/files/images/@Model.ImageName" class="w-100 rounded-4" />
            </div>
        }
        else
        {
            <div class="w-100">
                <img src="~/files/images/images.jpeg" class="w-100 rounded-4" />
            </div>
        }

    </div>
    <div class="col-md-6">
        <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly/>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input asp-for="Address" class="form-control" readonly/>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input asp-for="Salary" class="form-control" readonly/>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input asp-for="Email" class="form-control" readonly/>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="@Model.DepartmentId"></label>
        <input value="@ViewBag.Dep" class="form-control" readonly />
    </div>

    <div class="form-group form-check">
        <input class="form-check-input" type="checkbox" asp-for="@Model.IsActive" readonly/>
        <label class="form-check-label" asp-for="@Model.IsActive"></label>
    </div>
    </div>
</div>

